<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/details_show_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Breaking Bad"
        android:textColor="@android:color/black"
        android:textSize="45sp" />

    <TextView
        android:id="@+id/details_show_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/details_show_title"
        android:layout_margin="8dp"
        android:text="Meth and stuff!"
        android:textSize="20sp" />



    <Button
        android:id="@+id/button_update_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:text="Update description" />

    <EditText
        android:id="@+id/details_show_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_above="@id/button_update_description"
        android:layout_margin="8dp"
        android:hint="Enter your own description" />

</RelativeLayout>